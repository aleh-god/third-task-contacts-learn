<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select"
            style="@style/Widget.ThirdTask.Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_text_select"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show"
            style="@style/Widget.ThirdTask.Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_text_show"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_shared_preference"
            style="@style/Widget.ThirdTask.Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_text_sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notification"
            style="@style/Widget.ThirdTask.Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_text_not"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Jesus"
            android:visibility="gone"
            style="@style/Widget.ThirdTask.TextView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/surname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="God"
            android:visibility="gone"
            style="@style/Widget.ThirdTask.TextView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="+375291234567"
            android:visibility="gone"
            style="@style/Widget.ThirdTask.TextView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="email@email.com"
            android:visibility="gone"
            style="@style/Widget.ThirdTask.TextView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>